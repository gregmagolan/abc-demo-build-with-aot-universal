{
  "name": "abc-demo-build-with-aot-universal",
  "version": "0.0.0",
  "license": "MIT",
  "dependencies": {
    "@angular/animations": "5.0.0-beta.7",
    "@angular/bazel": "5.0.0-beta.7",
    "@angular/common": "5.0.0-beta.7",
    "@angular/core": "5.0.0-beta.7",
    "@angular/forms": "5.0.0-beta.7",
    "@angular/http": "5.0.0-beta.7",
    "@angular/platform-browser": "5.0.0-beta.7",
    "@angular/platform-browser-dynamic": "5.0.0-beta.7",
    "@angular/platform-server": "5.0.0-beta.7",
    "@angular/router": "5.0.0-beta.7",
    "@angular/tsc-wrapped": "5.0.0-beta.7",
    "@angular/upgrade": "5.0.0-beta.7",
    "core-js": "^2.5.1",
    "express": "^4.15.4",
    "rxjs": "^5.4.3",
    "zone.js": "^0.8.17"
  },
  "devDependencies": {
    "@angular/compiler": "5.0.0-beta.7",
    "@angular/compiler-cli": "5.0.0-beta.7",
    "@bazel/typescript": "^0.1.0",
    "@types/core-js": "^0.9.43",
    "@types/express": "^4.0.37",
    "@types/node": "^8.0.28",
    "@types/webpack": "^3.0.10",
    "clang-format": "^1.0.55",
    "google-closure-compiler": "git+https://github.com/alexeagle/closure-compiler.git#packagejson.dist",
    "protobufjs": "^5.0.2",
    "replace-in-file": "git+https://github.com/adamreisnz/replace-in-file#v3.0.0-beta.2",
    "rimraf": "^2.6.2",
    "source-map-explorer": "^1.4.0",
    "tsickle": "^0.24.1",
    "typescript": "~2.4.2",
    "webpack": "^3.6.0"
  },
  "scripts": {
    "postinstall": "ngc -p angular.tsconfig.json",
    "build:webpack": "yarn build:src && yarn build:server && yarn build:browser:webpack && yarn build:dist:webpack",
    "build:closure": "yarn build:src && yarn build:src:closure && yarn build:server && yarn build:browser:closure && yarn build:dist:closure",
    "build:src": "bazel build src",
    "build:src:closure": "bazel build src:src-closure",
    "build:server": "bazel build src:server",
    "build:browser:webpack": "bazel build src:browser",
    "build:browser:closure": "yarn build:closure-bin && java -jar node_modules/google-closure-compiler/compiler.jar --flagfile closure.browser.conf",
    "build:browser:closure-debug": "yarn build:closure-bin && java -jar node_modules/google-closure-compiler/compiler.jar --flagfile closure.browser.conf --debug --formatting PRETTY_PRINT",
    "build:closure-bin": "rimraf ./closure-bin && mkdir -p closure-bin && rsync --archive --chmod=ugo=rwX bazel-bin/src closure-bin && node ./utils/closure-require-replace.js",
    "build:dist:webpack": "rimraf ./dist && mkdir -p ./dist && cp -f ./src/index.html ./dist && cp -f ./bazel-bin/src/server.js ./dist && cp -f ./bazel-bin/src/browser.js ./dist && cp -f ./node_modules/zone.js/dist/zone.min.js ./dist",
    "build:dist:closure": "rimraf ./dist && mkdir -p ./dist && cp -f ./src/index.html ./dist && cp -f ./bazel-bin/src/server.js ./dist && cp -f ./closure-bin/src/browser.js ./dist && cp -f ./closure-bin/src/browser.js.map ./dist && cp -f ./node_modules/zone.js/dist/zone.min.js ./dist",
    "compress": "sh ./compress.sh",
    "serve": "node ./dist/server.js",
    "format": "clang-format --glob='{src/**/,}*.{js,ts}' -i",
    "format:enforce": "clang-format --glob='{src/**/,}*.{js,ts}' -output-replacements-xml | grep -c offset | grep 0",
    "explore:browser:closure": "source-map-explorer dist/browser.js dist/browser.js.map",
    "clean:bazel": "bazel clean",
    "clean:non-bazel": "rimraf ./closure-bin && rimraf ./dist",
    "clean:all": "yarn clean:bazel && yarn clean:non-bazel"
  }
}
